<div class="container">
<div class="center-algin text-center justify-content-center m-5 mx-auto">
<div class="row">
    <div class="col-md-5">
        {{#if booking.user.file}}
            <img src="/uploads/{{booking.user.file}}" width="250" class="img-circle" alt="">
            {{else}}
            <img src="/uploads/default.png" alt="">
        {{/if}}

    </div>

    <div class="col-md-5 mt-2">
        <table class="table table-striped table-responsive">
            <tr>
                <th>Full Name</th>
                <td>{{booking.user.name}}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{booking.user.email}}</td>
            </tr>


            <tr>
                <th>Phone</th>
                <td>{{booking.user.phone}}</td>
            </tr>


            <tr>
                <th>Location</th>
                <td>{{booking.location}}</td>
            </tr>

            <tr>
                <th>Destination</th>
                <td>{{booking.destination}}</td>
            </tr>


            <tr>
                <th>Plan</th>
                <td>{{booking.plan}}</td>
            </tr>


            <tr>
                <th>Amount in dollars</th>
                <td>{{booking.amount}}</td>
            </tr>


            <tr>
                <th>Date</th>
                <td>{{booking.booking_time}}</td>
            </tr>


            <tr>
                <th>Time</th>
                <td>{{profile.booking_time}}</td>
            </tr>


            <tr>
                <th>Date Received</th>
                <td>{{booking.date}}</td>
            </tr>

            <tr>
                <th>Edit Booking</th>
               <td><a href="/admin/contact/edit/{{id}}" class="btn btn-success"><i class="fa fa-pencil"></i></a></td>
            </tr>


            <tr>
                <th>Cancel Booking</th>
                 <td><a href="/admin/contact/cancel/{{id}}" class="btn btn-success"><i class="fa fa-remove"></i> Cancel</a></td>
            </tr>


            <tr>
                <th>Delete Booking</th>
               <td>
                <form action="admin/contact/{{id}}/delete?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i></button>
                </form>
                </td>
            </tr>

        </table>
    </div>
</div>
</div>
   

</div>